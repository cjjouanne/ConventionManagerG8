@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" class="rounded-sm" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="rounded-sm form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="rounded-sm form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="rounded-sm form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Curriculum"></label>
                <input asp-for="Input.Curriculum" class="rounded-sm" type="file" accept=".png,.jpg,.jpeg,.gif,.tif"/>
            </div>
            <div class="form-group">
                <label asp-for="Input.ProfilePicture"></label>
                <input asp-for="Input.ProfilePicture" class="rounded-sm" type="file" accept=".png,.jpg,.jpeg,.gif,.tif"/>
            </div>
            <button id="update-profile-button" type="submit" class="btn rounded-sm btn-primary">Save</button>
        </form>
    </div>
</div>

<br />

<div>
    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn rounded-sm btn-light">Go Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}