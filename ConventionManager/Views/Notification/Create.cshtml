@model ConventionManager.Models.Notification

@{
    ViewData["Title"] = "Create";
    
}

<h1>Notification to Attendants</h1>
@{   
    var eventId = ViewBag.EventId;  
} 
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendNotificationToEventAttendants">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="eventId" value=@eventId/>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control"/>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SendNotification" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
