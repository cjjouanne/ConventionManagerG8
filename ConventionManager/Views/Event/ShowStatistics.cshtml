            }
        }
    </dd>

    <dt class="col-sm-4">
        Event Duration:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Duration)
            {
                <span class="fa fa-star checked"></span>
            }
            else
