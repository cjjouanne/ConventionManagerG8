                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Would Recommend? opinions:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.WouldRecommend)
            {
                <span class="fa fa-star checked"></span>
            }
            else
