@model ConventionManager.Models.EventQualityStatistics

@{
    ViewData["Title"] = "Statistics";
}

<style>
.checked {
color: orange;
}
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h3>Event Ratings</h3>
<br />

<dl class="row">
    <dt class = "col-sm-4">
        Overall opinion:
    </dt>
    <dd class = "col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Overall)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Event Organization:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Organization)
            {
                <span class="fa fa-star checked"></span>
            }
