@model IEnumerable<ConventionManager.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>All Events</h1>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-controller=@item.GetEventType() asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-controller=@item.GetEventType() asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-controller=@item.GetEventType() asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <p>There are no Events scheduled at this moment. You can create one in a Conference or in a Room at any Event Center.</p>
}
