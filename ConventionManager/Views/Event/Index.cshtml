@model IEnumerable<ConventionManager.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>All Events</h1>
<br/>
@if (Model.Count() > 0)
{
    <div class="card-columns">
        @foreach (var item in Model)
        {
            <div class="card rounded-sm text-white bg-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">
                    @Html.DisplayFor(modelItem => item.StartDate.DayOfWeek)
                    @Html.DisplayFor(modelItem => item.StartDate.Day) /
                    @Html.DisplayFor(modelItem => item.StartDate.Month) /
                    @Html.DisplayFor(modelItem => item.StartDate.Year)
                </div>
                <div class="card-body">
                    <a asp-controller="@item.GetEventType()" asp-action="Details" asp-route-id="@item.Id" >
                        <h4 class="card-title text-white">
                            @Html.DisplayFor(modelItem => item.Name)
                        </h4>
                    </a>
                    <p class="card-text"> Start: @Html.DisplayFor(modelItem => item.StartDate.TimeOfDay)</p>
                    <p class="card-text"> End: @Html.DisplayFor(modelItem => item.EndDate.TimeOfDay)</p>
                </div>
                 @if (User.IsInRole("Organizer"))
                 {
                     <div class="card-footer">
                         <a asp-controller="@item.GetEventType()" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                         <a asp-controller="@item.GetEventType()" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                     </div>
                 }
            </div>
        }
    </div>
}
else
{
    <p>There are no Events scheduled at this moment. You can create one in a Conference or in a Room at any Event Center.</p>
}
