@model ConventionManager.Models.ConferenceAndSponsor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Conference</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conference.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conference.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conference.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conference.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Conference.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>Sponsors</h4>

    <ul>
        @foreach(var sponsor in Model.Conference.Sponsors)
        {
            <li>@sponsor.Name</li>
        }
    </ul>

    <form asp-action="AddSponsor", asp-route-id="@Model.Conference.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Sponsor.Name" class="control-label"></label>
                <input asp-for="@Model.Sponsor.Name" class="form-control" />
                <span asp-validation-for="@Model.Sponsor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>