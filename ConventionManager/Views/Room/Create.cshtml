@model ConventionManager.Models.EventCenterConferencesAndRooms

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="EventCenter" asp-action="CreateRoom", asp-route-id="@Model.EventCenter.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Room.Name" class="control-label"></label>
                <input asp-for="@Model.Room.Name" class="form-control" />
                <span asp-validation-for="@Model.Room.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.Capacity" class="control-label"></label>
                <input asp-for="@Model.Room.Capacity" class="form-control" />
                <span asp-validation-for="@Model.Room.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.Location" class="control-label"></label>
                <input asp-for="@Model.Room.Location" class="form-control" />
                <span asp-validation-for="@Model.Room.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="EventCenter" asp-action="Details" asp-route-id="@Model.EventCenter.Id" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
