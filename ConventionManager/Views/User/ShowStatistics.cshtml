@model ConventionManager.Models.ExhibitorQualityStatistics

@{
    ViewData["Title"] = "Statistics";
}

<style>
.checked {
color: orange;
}
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h3>Exhibitor's Ratings</h3>
@if (Model.Total == 0)
{
    <p class="alert alert-warning rounded-sm alert-dismissible">This exhibitor hasn't been rated yet</p>
}
<br />
<dl class="row">
    <dt class = "col-sm-4">
        Overall opinion:
    </dt>
    <dd class = "col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Overall)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Preparation:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Preparation)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Attitude:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Attitude)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Voice volume:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Voice)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class="col-sm-4">
        Connection:
    </dt>
    <dd class="col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Connection)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>

    <dt class = "col-sm-4">
        Exhibitor's final rating:
    </dt>
    <dd class = "col-sm-8">
        @for (var i = 1; i <= 5; i++)
        {
            if (i <= Model.Total)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </dd>
</dl>


<br />

<div>
    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn rounded-sm btn-light">Go Back</a>
</div>
