@model IEnumerable<ConventionManager.Models.ApplicationUser>

@{
    ViewData["Title"] = "Profile";
}

<h1>All Users</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeUserRole">
            <div class="form-group">
                <label class="control-label">Select User</label>
                <select name="userId" class="form-control" id="shell">
                    @foreach (ApplicationUser user in Model)
                    {
                        <option value="@user.Id">@user.FirstName @user.LastName (@user.UserName)</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Select Role to assign</label>
                <select class ="form-control" name="roleId" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="ChangeUserRole" class="btn rounded-sm btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn rounded-sm btn-light">Go Back</a>
</div>